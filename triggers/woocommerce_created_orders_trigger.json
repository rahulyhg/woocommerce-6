  "trigger_type":"rest_hook",
  "webhook":{
    "message_type":"object",
    "rest_hook_config":{
      "create": {
        "verb": "POST",
        "method_name": "/webhooks",
        "params": {
          "name": "Order created",
          "topic": "order.created",
          "secret": ""
        }
      },
      "delete":{
        "verb":"DELETE",
        "method_name":"/webhooks/{id}",
        "params":{
          "force": "true"
        }
      },
      "meta_params":{
        "webhook_id":"id",
        "webhook_url":"delivery_url"
      }
    },
    "event_filter": {
      "field": "status",
      "events": ["pending", "on-hold"]
    },
    "idempotent":[
      {"type":"body", "field":"id"}
    ]
  }
